<div class="text-center">
	<main class="form-signin">
		<%=form_with model:article do |f| %>
			<img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
			<h1 class="h3 mb-3 fw-normal">Please sign in</h1>
			<div class="form-floating">
				<%=f.text_field :title, class:'form-control', placeholder: 'Title of Article' value:(article.title.nil? ? '' : article.title) %>
				<%=f.label :title, 'Title of Your Article'%>
			</div>
			<div class= "form-floating">
				<%=f.text_area_field :body, class: 'form-control', placeholder: 'Content of Article' value:(article.body.nil? ? '' :article.body)%>
				<%=f.label :body, 'Write Content of Article'%>
			</div>
			<%=f.submit activity class:'w-100 btn btn-primary'%i>
			<%=link_to :Cancel, '#', class:'w-100 btn btn-danger'%>
		<%end%>
	</main>
</div>

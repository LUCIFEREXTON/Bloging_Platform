<div class="text-center d-flex align-items-center justify-content-center vh-100" style="padding-top:40px;padding-bottom:40px;background-color: #f5f5f5;">
	<main class="form-signin">
		<%=form_with url:'/signup', model:@user do |f| %>
			<img class="mb-4" src="/docs/5.1/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
			<h1 class="h3 mb-3 fw-normal">Please sign in</h1>
			<div class="form-floating">
				<%=f.email_field :email ,id: :floatingInput, class:'form-control', placeholder: 'name@example.com'%>
				<%=f.label :email, 'Email Address', for:'floatingInput'%>
			</div>
			<div class="form-floating">
				<%=f.password_field :password ,id: :floatingPassword, class:'form-control', placeholder: 'Password'%>
				<%=f.label :password, 'Password', for:'floatingPassword'%>
			</div>
			<div class="form-floating">
				<%=f.password_field :password_conformation ,id: :floatingPassword, class:'form-control', placeholder: 'Confirm Password'%>
				<%=f.label :password_conformation, 'Confirm Password', for:'floatingPassword'%>
			</div>
			<%=f.submit 'Sign in', class:'w-100 btn btn-primary'%>
		<%end%>
	</main>
</div>

<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="text-center d-flex align-items-center justify-content-center vh-100" style="padding-top:40px;padding-bottom:40px;background-color: #f5f5f5;">
	<main class="form-signin">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <h1 class="h3 mb-3 fw-normal">Edit <%= resource_name.to_s.humanize %></h1>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-floating">
    <%= f.label :email , 'Email Address', for:'floatingInputee' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,id: :floatingInputee, class:'form-control', placeholder: 'name@example.com' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-floating">
    <%= f.label :password, 'New Password', for:'floatingInputep' %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password" ,id: :floatingInputep, class:'form-control', placeholder: 'Password' %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-floating">
    <%= f.label :password_confirmation , 'Confirm Password', for:'floatingInputecp' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,id: :floatingInputecp, class:'form-control', placeholder: 'Confirm Password' %>
  </div>

  <div class="field form-floating">
    <%= f.label :current_password, 'Current Password', for:'floatingInputecrp' %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password" ,id: :floatingInputecrp, class:'form-control', placeholder: 'Current Password' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:'w-100 btn btn-primary' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'w-100 btn btn-primary' %></p>
<p class="mt-5 mb-3 text-muted"><%= link_to "Back", :back %></p>
	</main>
</div>